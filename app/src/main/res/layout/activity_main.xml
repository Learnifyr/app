<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F5267 "
    tools:context=".MainActivity">

    <Button
        android:id="@+id/menubutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:width="379dp"
        android:backgroundTint="#576271"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:circularflow_defaultRadius="0dp"
        app:cornerRadius="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/menubar"
        android:layout_width="379dp"
        android:layout_height="50dp"
        android:backgroundTint="#576271"
        android:visibility="visible"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/menubutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/menubutton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/button1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:backgroundTint="#FEFEFE"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:circularflow_defaultRadius="0dp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="125dp"
            android:backgroundTint="#FEFEFE"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:circularflow_defaultRadius="0dp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="190dp"
            android:backgroundTint="#FEFEFE"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:circularflow_defaultRadius="0dp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="255dp"
            android:backgroundTint="#FEFEFE"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Cijfers"
            android:textColor="#000000"
            app:circularflow_defaultRadius="0dp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="320dp"
            android:backgroundTint="#FEFEFE"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Docent"
            android:textColor="#000000"
            app:circularflow_defaultRadius="0dp"
            app:cornerRadius="25dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2E4053"
        android:text="test"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="174dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3F5267 "
        android:text="test"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="193dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#576271"
        android:text="test"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="212dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:text="test"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="231dp" />

</androidx.constraintlayout.widget.ConstraintLayout>